<%- include('../partials/header'); -%>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="http://localhost:1337/">Home</a>
    </li>
    <li class="breadcrumb-item">
      <a href="http://localhost:1337/user">Users</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
      <%=user.username%>
    </li>
  </ol>
</nav>

<div class="px-4 py-2 my-5 text-center">
  <img
    src="/images/pfp.webp"
    alt="Profile picture"
    ,
    style="width: 5%; border-radius: 20%"
  />
  <h3 class="display-3 fw-bold"><%=user.username%></h3>
  <div>
    <p style="display: inline">
      <b>Email: </b> <%=user.email%> â€¢ <b>Birthday: </b> <%=user.date_of_birth%>
    </p>
  </div>
</div>

<div class="d-flex justify-content-center">
  <div style="width: 30%; margin-right: 20px">
    <h4>Friends</h4>
    <table class="info-table table table-dark rounded">
      <thead>
        <tr>
          <th scope="col">Username</th>
        </tr>
      </thead>
      <tbody>
        <% friends.forEach(function(friend, i){ %>
        <tr
          class="table-row"
          style="cursor: pointer"
          onclick="location.href='/user/<%=friend.friends_user_two%>'"
        >
          <td><%=friend.friends_user_two%></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <div style="width: 30%; margin-right: 20px; margin-left: 20px">
    <h4>Made routines</h4>
    <table class="info-table table table-dark rounded">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Type</th>
        </tr>
      </thead>
      <tbody>
        <% made_routines.forEach(function(routine, i){ %>
        <tr
          class="table-row"
          style="cursor: pointer"
          onclick="location.href='/routine/<%=routine.routine_id%>'"
        >
          <td><%=routine.routine_name%></td>
          <td><%=routine.routine_type%></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <div style="width: 30%; margin-left: 20px">
    <h4>Saved routines</h4>
    <table class="info-table table table-dark rounded">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Type</th>
        </tr>
      </thead>
      <tbody>
        <% saved_routines.forEach(function(routine, i){ %>
        <tr
          class="table-row"
          style="cursor: pointer"
          onclick="location.href='/routine/<%=routine.routine_id%>'"
        >
          <td><%=routine.routine_name%></td>
          <td><%=routine.routine_type%></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer');-%>
